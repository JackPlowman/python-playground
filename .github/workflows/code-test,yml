name: "Code Quality"

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

permissions:
  contents: read

jobs:
  check-code-quality:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        folder: [django_rest]
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Python Development Requirements
        run: make development-install
      - name: Install Production Dependencies
        run: make install
        working-directory: ./applications/${{ matrix.folder }}
      - name: Unit Test
        uses: make test
